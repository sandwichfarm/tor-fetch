{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": ["ES6"],
    "outDir": "./dist/server",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/server/types",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".", 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  }
}
